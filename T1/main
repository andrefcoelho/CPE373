clc; clear all;

% Comentários:
% • Colocar função e intervalo via interface

metodo = 0; error = 0; min = 0;

%% Escolhas do usuário

x = linspace(-5,5); %Adicionar domínio
f = x.^2; %Adicionar função aqui

resposta = questdlg('Qual é o método de otimização a ser utilizado?', ...
	'Possibilidades', ...
	'Fibonacci','Razão Áurea','Brendt','Fibonacci');

switch resposta
    case 'Fibonacci'
        metodo = 1;
    case 'Razão Áurea'
        metodo = 2;
    case 'Brendt'
        metodo = 3;
end

plot(x,f)
hold on

%% Opção 1 selecionada
if(metodo == 1)
    
    while(error >= 10^-6)
        plot(min,'r-o');    
    end
    
    
    
end

%% Opção 2 selecionada
if(metodo == 2)
    
    while(error >= 10^-6)
        plot(min,'r-o');    
    end
    
end


%% Opção 3 selecionada
if(metodo == 3)
    
    while(error >= 10^-6)
        plot(min,'r-o');    
    end
    
end
